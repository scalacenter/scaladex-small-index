<project 
xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0">
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <bundle.plugin.version>2.1.0</bundle.plugin.version>
    <cobertura-plugin.version>2.5.2</cobertura-plugin.version>
    <junit.version>4.10</junit.version>
    <maven-javadoc-plugin.version>2.9</maven-javadoc-plugin.version>
    <maven-license-plugin.version>1.9.0</maven-license-plugin.version>
    <maven-source-plugin.version>2.2.1</maven-source-plugin.version>
    <scala.plugin.version>3.1.0</scala.plugin.version>
    <scalariform-plugin.version>0.1.3</scalariform-plugin.version>
    <lib4s.version>0.1.13-RC1</lib4s.version>
    <scala.version>2.10.0</scala.version>
    <scalatest.version>2.0.M5</scalatest.version>
    <slf4j.version>1.6.1</slf4j.version>
    <surefire-plugin.version>2.12.4</surefire-plugin.version>
  </properties>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.automatak.lib4s</groupId>
  <artifactId>lib4s_2.10.0</artifactId>
  <packaging>pom</packaging>
  <version>0.1.13-RC1</version>
  <name>lib4sS</name>
  <url>http://www.github.com/automatakllc/lib4s</url>
  <description>Library pimps for Scala</description>
  <developers>
    <developer>
      <id>jadamcrain</id>
      <name>J Adam Crain</name>
      <email>jadamcrain@automatak.com</email>
    </developer>
  </developers>
  <modules>
    <module>commons</module>
    <module>executor4s</module>
    <module>log4s</module>
    <module>nio4s</module>
    <module>osgi4s</module>
  </modules>
  <scm>
    <connection>scm:git:git@github.com:automatakllc/lib4s.git</connection>
    <url>https://github.com/jadamcrain/lib4s</url>
    <developerConnection>
      scm:git:git@github.com:automatakllc/lib4s.git
    </developerConnection>
  </scm>
  <distributionManagement>
    <snapshotRepository>
      <id>sonatype-snapshots</id>
      <name>Sonatype Snapshots</name>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </snapshotRepository>
    <repository>
      <id>sonatype-releases</id>
      <name>Sonatype Releases</name>
      <url>https://oss.sonatype.org/service/local/staging/deploy/maven2</url>
    </repository>
  </distributionManagement>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <profiles>
    <profile>
      <id>release-sign-artifacts</id>
      <activation>
        <property>
          <name>performRelease</name>
          <value>true</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
            <version>1.4</version>
            <executions>
              <execution>
                <id>sign-artifacts</id>
                <phase>verify</phase>
                <goals>
                  <goal>sign</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>${maven-source-plugin.version}</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>verify</phase>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>${maven-javadoc-plugin.version}</version>
        <executions>
          <execution>
            <id>attach-javadocs</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>cobertura-maven-plugin</artifactId>
        <version>${cobertura-plugin.version}</version>
        <configuration>
          <format>xml</format>
          <format>html</format>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.mycila.maven-license-plugin</groupId>
        <artifactId>maven-license-plugin</artifactId>
        <version>${maven-license-plugin.version}</version>
        <configuration>
          <excludes>
            <exclude>.idea/**</exclude>
            <exclude>.gitignore</exclude>
            <exclude>LICENSE_HEADER</exclude>
            <exclude>*.md</exclude>
            <exclude>*.markdown</exclude>
            <exclude>NOTICE</exclude>
          </excludes>
          <strictCheck>true</strictCheck>
          <failIfMissing>true</failIfMissing>
          <aggregate>true</aggregate>
          <header>./LICENSE_HEADER</header>
        </configuration>
        <executions>
          <execution>
            <id>check-headers</id>
            <phase>process-sources</phase>
            <goals>
              <goal>format</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>scala-maven-plugin</artifactId>
        <version>${scala.plugin.version}</version>
        <executions>
          <execution>
            <id>doc</id>
            <goals>
              <goal>doc-jar</goal>
            </goals>
          </execution>
          <execution>
            <id>compile</id>
            <goals>
              <goal>add-source</goal>
              <goal>compile</goal>
            </goals>
          </execution>
          <execution>
            <id>testCompile</id>
            <goals>
              <goal>testCompile</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <args>
            <arg>-feature</arg>
            <arg>-language:implicitConversions</arg>
            <arg>-deprecation</arg>
            <arg>-target:jvm-1.7</arg>
            <arg>-Ywarn-adapted-args</arg>
          </args>
          <jvmArgs>
            <jvmArg>-Xmx1024m</jvmArg>
          </jvmArgs>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.scalariform</groupId>
        <artifactId>scalariform-maven-plugin</artifactId>
        <version>${scalariform-plugin.version}</version>
        <executions>
          <execution>
            <goals>
              <goal>format</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${surefire-plugin.version}</version>
        <configuration>
          <includes>
            <include>**/*.class</include>
          </includes>
          <reportFormat>brief</reportFormat>
          <useFile>false</useFile>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <version>${slf4j.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${slf4j.version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.scala-lang</groupId>
      <artifactId>scala-library</artifactId>
      <version>${scala.version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.scalatest</groupId>
      <artifactId>scalatest_${scala.version}</artifactId>
      <version>${scalatest.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>

